{
  "name": "summarizer",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered meeting notes summarizer and sharer",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/server.js",
    "install:all": "npm install && npm install --prefix server",
    "lint": "eslint ."
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "firebase": "^12.1.0",
    "lucide-react": "^0.539.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^6.1.0"
  },
  "keywords": [
    "ai",
    "meeting",
    "summarizer",
    "notes",
    "huggingface",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT"
}
